---
import ExperienceTimeline from '@/components/experience/ExperienceTimeline.astro';

import {education, works} from '@/data/education_experience';

---

<div class="w-full px-4 py-8">
    <div class="max-w-7xl mx-auto">
        <div class="grid sm:grid-cols-1 md:grid-cols-2 gap-6 px-4 py-8" id="experience">
            <ExperienceTimeline title="Experience" timelinegrid={works} />
            <ExperienceTimeline title="Education" timelinegrid={education} />
        </div>
    </div>
</div>